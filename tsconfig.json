{
    "compilerOptions": {
        "rootDir": "./src",
        "target": "ESNext",
        "declaration": true,
        "strict": true,
        "module": "CommonJS",
        "outDir": "./dist",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "alwaysStrict": true
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}